# Telegram API credentials (get from https://my.telegram.org/apps)
TELEGRAM_API_ID=12345
TELEGRAM_API_HASH=your_api_hash_here

# Telegram Bot token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Session name for user client
USERBOT_SESSION=user_session

# Chat IDs to monitor (comma-separated list of integers)
MONITORED_CHATS=[-100123456789,-100987654321]

# OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Linear API key
LINEAR_API_KEY=lin_api_key_here

# Mapping of Telegram chat IDs to Linear team IDs
# Format: {"telegram_chat_id1": "linear_team_id1", "telegram_chat_id2": "linear_team_id2", "default": "default_team_id"}
LINEAR_TEAM_MAPPING={"default": "team_id_here"}

# Database URI (SQLite or PostgreSQL)
DB_URI=sqlite:///telegram_assistant.db

# Admin user ID (your Telegram user ID)
ADMIN_USER_ID=12345678

# Reminder settings (seconds)
REMINDER_INTERVAL=3600

# Time for daily summary (hour in 24h format)
SUMMARY_HOUR=18

# Directory for downloaded files
DOWNLOADS_DIR=downloads 